<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>GPA</th>
            </tr>
        </thead>
        <tbody>
            {{#each students}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.GPA}}</td>
                <td>
                    <button class="btn btn-danger delete-btn" data-id={{this.id}}>Delete</button>
                </td>
                <td>
                    <a class="btn btn-default edit-btn" href="/student/{{this.id}}">Edit</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <form id="add-student">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name">
        </div>
        <div class="form-group">
            <label for="GPA">GPA:</label>
            <input type="text" class="form-control" id="GPA">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>